<p id="notice"><%= notice %></p>

<table>
  <!-- <thead>
    <tr>
      <th>Schedule</th>
      <th>Band</th>
      <th>Special</th>
      <th colspan="3"></th>
    </tr>
  </thead> -->

  <tbody>
    <% @periods.each_with_index do |period,i| %>
        <% pnext = @periods[(i+1)] %>
        <% if pnext && period.schedule < Time.now && pnext.schedule > Time.now %>
          <tr class="current-period">
        <% elsif period.schedule < Time.now %>
          <tr class="past-period">
        <% else %>
          <tr class="<%= cycle("odd", "even") %>">
        <% end %>
        <td><%= period.schedule.strftime("%H : %M %p") %></td>
        <td><%= period.band %></td>
        <td class="last"><%= period.special %></td>
        <!--<td><%= link_to 'Show', period %></td>
        <td><%= link_to 'Edit', edit_period_path(period) %></td>
        <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

